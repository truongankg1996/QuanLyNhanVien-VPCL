<Window x:Class="QuanLyNhanVien.View.UngVienWIndow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyNhanVien.View"
        mc:Ignorable="d"
        
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:uc="clr-namespace:QuanLyNhanVien.UserControlAn"
     
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="20"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        WindowState="Normal"
        WindowStyle="None"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        
        DataContext="{StaticResource TuyenDungVM}"
        Name="window"
        Title="Thông Tin Ứng Viên" Height="800" Width="1000">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <!--Thanh ControlBar-->
        <Grid Grid.Row="0">
            <uc:ControlBarUC Tag="{Binding Title, ElementName=window}"></uc:ControlBarUC>
        </Grid>

        <!--Nội Dung-->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"></RowDefinition>
                <RowDefinition Height="6*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
            </Grid.RowDefinitions>

            <!--Thanh công cụ-->
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.Background>
                    <ImageBrush ImageSource="/ResourceXAML/Icons/background.jpg" Stretch="Fill"></ImageBrush>
                </Grid.Background>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"
                            VerticalAlignment="Bottom" Margin="0 0 20 0">
                    <!--Nút Chỉnh sửa-->
                    <Button BorderBrush="{x:Null}" Background="{x:Null}" Height="40" ToolTip="Chỉnh sửa">
                        <Image Stretch="None" Source="/ResourceXAML/Icons/btnSua.png"></Image>

                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding SuaCommand}">
                                </i:InvokeCommandAction>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>

                    <!--Nút Xóa-->
                    <Button BorderBrush="{x:Null}" Background="{x:Null}" Height="40" ToolTip="Xóa">
                        <Image Stretch="None" Source="/ResourceXAML/Icons/btnXoa.png"></Image>

                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding XoaCommand}">
                                </i:InvokeCommandAction>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                </StackPanel>
            </Grid>

            <!--Nội Dung Chính-->
            <Grid Grid.Row="1">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition ></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition ></RowDefinition>
                        <RowDefinition Height="4*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <!--Thông tin cá nhân-->

                    <TextBlock Grid.Row="0" Text="Thông Tin Cá Nhân"
                           FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                    <materialDesign:Card Grid.Row="1" VerticalAlignment="Stretch" Width="450">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto">
                            <ListView>
                                <ListView.Style>
                                    <Style TargetType="ListView" BasedOn="{StaticResource MaterialDesignListView}">
                                        <Setter Property="IsEnabled" Value="False"></Setter>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsEditable}" Value="true">
                                                <Setter Property="IsEnabled" Value="True"></Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ListView.Style>

                                <StackPanel>
                                    <TextBox
                                    Width="400" HorizontalAlignment="Left"
                                    Margin="15,5,0,0" FontSize="18"
                                    Text="{Binding HoTen, UpdateSourceTrigger=PropertyChanged}"
                                    materialDesign:HintAssist.Hint="Họ Tên"
                                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

                                    <DatePicker
                                    Width="400" HorizontalAlignment="Left"
                                    Margin="15 5 0 0" FontSize="18"
                                    SelectedDate="{Binding NgaySinh, UpdateSourceTrigger=PropertyChanged}"
                                    materialDesign:HintAssist.Hint="Ngày Sinh"
                                    Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />

                                    <ComboBox
                                    Width="400" HorizontalAlignment="Left"
                                    Margin="15 5 0 0" FontSize="18"
                                    ItemsSource="{Binding ListGioiTinh}"
                                    SelectedItem="{Binding SelectedGioiTinh, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    materialDesign:HintAssist.Hint="Giới Tinh"
                                    Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                                    </ComboBox>
                                    
                                    <TextBox
                                    Width="400" HorizontalAlignment="Left"
                                    Margin="15,5,0,0" FontSize="18"
                                    Text="{Binding DiaChi, UpdateSourceTrigger=PropertyChanged}"
                                    materialDesign:HintAssist.Hint="Địa Chỉ"
                                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                
                                    <TextBox
                                    Width="400" HorizontalAlignment="Left"
                                    Margin="15,5,0,0" FontSize="18"
                                    Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                                    materialDesign:HintAssist.Hint="Email"
                                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                
                                    <TextBox
                                    Width="400" HorizontalAlignment="Left"
                                    Margin="15,5,0,0" FontSize="18"
                                    Text="{Binding SDT, UpdateSourceTrigger=PropertyChanged}"
                                    materialDesign:HintAssist.Hint="Số Điện Thoại"
                                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                </StackPanel>
                            </ListView>
                        </ScrollViewer>
                    </materialDesign:Card>
                </Grid>

                <!--Hồ Sơ Ứng Tuyển-->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition Height="4*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Hồ Sơ Ứng Tuyển"
                           FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>

                    <materialDesign:Card Grid.Row="1" VerticalAlignment="Stretch">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto">
                            <ListView 
                                        Name="listHSUT"
                                        ItemsSource="{Binding ListHoSoUngTuyen}" 
                                        SelectedItem="{Binding SelectedHoSoUngTuyen, Mode=OneWayToSource}" >

                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="SelectionChanged">
                                        <i:InvokeCommandAction Command="{Binding HienThi_HSUTCommand}">
                                        </i:InvokeCommandAction>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>

                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn DisplayMemberBinding="{Binding ViTriCongViec_HSUT}" >
                                            <GridViewColumnHeader Tag="ViTriCongViec_HSUT" 
                                                              Command="{Binding SortCommand}" 
                                                              CommandParameter="{Binding RelativeSource={RelativeSource Self}}" 
                                                              VerticalAlignment="Center" Content="Vị Trí Công Việc" Width="150">
                                            </GridViewColumnHeader>
                                        </GridViewColumn>
                                        <GridViewColumn DisplayMemberBinding="{Binding NgayNop_HSUT, StringFormat='dd/MM/yyyy'}">
                                            <GridViewColumnHeader Tag="NgayNop_HSUT" 
                                                              Command="{Binding SortCommand}" 
                                                              CommandParameter="{Binding RelativeSource={RelativeSource Self}}" 
                                                              VerticalAlignment="Center" Content="Ngày Nộp " Width="150">
                                            </GridViewColumnHeader>
                                        </GridViewColumn>
                                        <GridViewColumn DisplayMemberBinding="{Binding TrangThai_HSUT}">
                                            <GridViewColumnHeader Tag="TrangThai_HSUT" 
                                                              Command="{Binding SortCommand}" 
                                                              CommandParameter="{Binding RelativeSource={RelativeSource Self}}" 
                                                              VerticalAlignment="Center" Content="Trạng Thái" Width="150">
                                            </GridViewColumnHeader>
                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </ScrollViewer>
                    </materialDesign:Card>
                </Grid>
            </Grid>

            <!--Lưu và hủy-->
            <Grid Grid.Row="2" Margin="20 10">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">

                    <Button Height="40" Width="100" Content="Lưu" ToolTip="Lưu"
                            BorderBrush="{x:Null}" Background="Cyan" 
                            FontWeight="Normal"
                            Foreground="Black" IsDefault="True">

                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding LuuCommand}"
                                                   CommandParameter="{Binding ElementName=window}">
                                </i:InvokeCommandAction>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>

                    <Button Height="40" Width="100" Content="Hủy" ToolTip="Hủy"
                            BorderBrush="{x:Null}" Background="White" 
                            FontWeight="Normal" Foreground="Black" IsCancel="True">

                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding HuyCommand}"
                                                   CommandParameter="{Binding ElementName=window}">
                                </i:InvokeCommandAction>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
