<Window x:Class="QuanLyNhanVien.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyNhanVien"
        mc:Ignorable="d"
        
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:uc="clr-namespace:QuanLyNhanVien.UserControlAn"
     
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        
        Icon="/ResourceXAML/Icons/logo.png" Foreground="#FF232C3A" FontSize="14"
        Title="Quản Lý Nhân Viên Vạn Phước Cửu Long" Height="770" Width="1300"
        DataContext="{StaticResource MainVM}"
        Name="mainWindow">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction 
                Command="{Binding SetupQuyenCommand}"  >
            </i:InvokeCommandAction>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <!--Thanh ControlBar-->
        <Grid Grid.Row="0">
            <uc:ControlBarUC Tag="{Binding Title, ElementName=mainWindow}"></uc:ControlBarUC>
        </Grid>

        <!--Nôi dung-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <!--Thông tin nhân viên đăng nhập phần mềm Và Các thanh công cụ-->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="160"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <StackPanel Margin="30 0 0 0" VerticalAlignment="Center" >
                        <!--Avatar của nhân viên-->
                        <Ellipse Width="60" Height="60" HorizontalAlignment="Left" Margin="0 0 0 10">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="{Binding AvatarSource}" Stretch="Uniform"></ImageBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                        <!--Tên hiện thị nhân viên-->
                        <TextBlock 
                        Text="{Binding TaiKhoanHienThi.NhanVien.HoTen_NV}"
                         HorizontalAlignment="Left" FontSize="20" Foreground="White"  >
                        </TextBlock>
                        <!--Chức vụ nhân viên-->
                        <TextBlock 
                        Text="{Binding TaiKhoanHienThi.NhanVien.ChucVu_NV}"
                         HorizontalAlignment="Left" FontSize="16" Foreground="White">
                        </TextBlock>
                        <!--Đăng xuất-->
                        <Button
                        Content="Đăng Xuất"
                        Style="{StaticResource MaterialDesignRaisedAccentButton}"
                        ToolTip="Resource name: MaterialDesignRaisedAccentButton"
                        HorizontalAlignment="Left" FontSize="12" Background="{x:Null}"
                        BorderBrush="{x:Null}" Margin="-15 0 0 0" FontWeight="Normal">

                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding DangXuatCommand}"
                                                       CommandParameter="{Binding ElementName=mainWindow}">
                                    </i:InvokeCommandAction>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>

                    </StackPanel>
                    <GridSplitter 
                    Height="1" VerticalAlignment="Bottom" HorizontalAlignment="Stretch"
                    IsEnabled="False" Foreground="#FFD6D6D6">
                    </GridSplitter>
                </Grid>
                <!--Menu chính-->
                <StackPanel Grid.Row="1" VerticalAlignment="Top" Margin="0 20 0 0">
                    <!--Trang chủ-->
                    <StackPanel Name="btnTrangChu" Orientation="Horizontal" Margin="0 0 0 5">
                        <Grid Width="7" Margin="0">
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Setter Property="Background" Value="{x:Null}"></Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ChucNangNS}" Value="0">
                                            <Setter Property="Background" Value="Cyan"></Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                        </Grid>
                        <Button 
                            Background="#FF616161"
                            Foreground="#DDFFFFFF"
                            ToolTip="Trang Chủ"
                            Width="250" Height="40" Margin="5 5 5 5" >
                            <Grid  Width="200">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0" Margin="15 0 0 0" HorizontalAlignment="Left">
                                    <materialDesign:PackIcon
                                    Kind="HomeVariant" Width="50" Height="30"
                                    />
                                </Grid>
                                <Grid Grid.Column="1">
                                    <TextBlock Text="Trang Chủ" FontSize="25"></TextBlock>
                                </Grid>
                            </Grid>
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                    <Setter Property="FontWeight" Value="Normal"></Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ChucNangNS}" Value="0">
                                            <Setter Property="FontWeight" Value="Bold"></Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding BtnTrangChuCommand}">
                                    </i:InvokeCommandAction>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>
                    </StackPanel>
                    <!--Nhân Viên-->
                    <StackPanel Name="btnNhanVien" Orientation="Horizontal" Margin="0 0 0 5">
                        <Grid Width="7" Margin="0">
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Setter Property="Background" Value="{x:Null}"></Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ChucNangNS}" Value="1">
                                            <Setter Property="Background" Value="Cyan"></Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                        </Grid>
                        <Button 
                            Background="#FF616161"
                            Foreground="#DDFFFFFF"
                            ToolTip="Nhân Viên" HorizontalAlignment="Left"
                            Width="250" Height="40" Margin="5 5 5 5" >
                            <Grid HorizontalAlignment="Left" Width="200">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0" Margin="15 0  0 0" HorizontalAlignment="Left">
                                    <materialDesign:PackIcon 
                                    Kind="AccountSupervisor" Width="50" Height="30"
                                    />
                                </Grid>
                                <Grid Grid.Column="1">
                                    <TextBlock Text="Nhân Viên" FontSize="25"></TextBlock>
                                </Grid>
                            </Grid>
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                    <Setter Property="FontWeight" Value="Normal"></Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ChucNangNS}" Value="1">
                                            <Setter Property="FontWeight" Value="Bold"></Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding BtnNhanVienCommand}">
                                    </i:InvokeCommandAction>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>


                    </StackPanel>
                    <!--Phòng Ban-->
                    <StackPanel Name="btnPhongBan" Orientation="Horizontal" Margin="0 0 0 5">
                        <Grid Width="7" Margin="0">
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Setter Property="Background" Value="{x:Null}"></Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ChucNangNS}" Value="2">
                                            <Setter Property="Background" Value="Cyan"></Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                        </Grid>
                        <Button 
                            Background="#FF616161"
                            Foreground="#DDFFFFFF"
                            ToolTip="Phòng Ban" HorizontalAlignment="Left"
                            Width="250" Height="40" Margin="5 5 5 5" >
                            <Grid HorizontalAlignment="Left" Width="200">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0" Margin="15 0 0 0" HorizontalAlignment="Left">
                                    <materialDesign:PackIcon 
                                    Kind="Domain" Width="50" Height="30"
                                    />
                                </Grid>
                                <Grid Grid.Column="1">
                                    <TextBlock Text="Phòng Ban" FontSize="25"></TextBlock>
                                </Grid>
                            </Grid>
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                    <Setter Property="FontWeight" Value="Normal"></Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ChucNangNS}" Value="2">
                                            <Setter Property="FontWeight" Value="Bold"></Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding BtnPhongBanCommand}">
                                    </i:InvokeCommandAction>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>
                    </StackPanel>
                    <!--Nghỉ Phép-->
                    <StackPanel Name="btnNghiPhep" Orientation="Horizontal" Margin="0 0 0 5">
                        <Grid Width="7" Margin="0">
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Setter Property="Background" Value="{x:Null}"></Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ChucNangNS}" Value="3">
                                            <Setter Property="Background" Value="Cyan"></Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                        </Grid>
                        <Button 
                            Background="#FF616161"
                            Foreground="#DDFFFFFF"
                            ToolTip="Nghỉ Phép" HorizontalAlignment="Left"
                            Width="250" Height="40" Margin="5 5 5 5" >
                            <Grid Width="200">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0" Margin="15 0 0 0" HorizontalAlignment="Left">
                                    <materialDesign:PackIcon 
                                    Kind="Food" Width="50" Height="30"
                                    />
                                </Grid>
                                <Grid Grid.Column="1">
                                    <TextBlock Text="Nghỉ Phép" FontSize="25"></TextBlock>
                                </Grid>
                            </Grid>
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                    <Setter Property="FontWeight" Value="Normal"></Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ChucNangNS}" Value="3">
                                            <Setter Property="FontWeight" Value="Bold"></Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding BtnNghiPhepCommand}">
                                    </i:InvokeCommandAction>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>
                    </StackPanel>
                    <!--Chấm Công-->
                    <StackPanel Name="btnChamCong" Orientation="Horizontal" Margin="0 0 0 5">
                        <Grid Width="7" Margin="0">
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Setter Property="Background" Value="{x:Null}"></Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ChucNangNS}" Value="4">
                                            <Setter Property="Background" Value="Cyan"></Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                        </Grid>
                        <Button 
                            Background="#FF616161"
                            Foreground="#DDFFFFFF"
                            ToolTip="Chấm Công" HorizontalAlignment="Left"
                            Width="250" Height="40" Margin="5 5 5 5" >
                            <Grid Width="200">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0" Margin="15 0 0 0" HorizontalAlignment="Left">
                                    <materialDesign:PackIcon 
                                        Kind="CalendarBlank" Width="50" Height="30" />
                                </Grid>
                                <Grid Grid.Column="1">
                                    <TextBlock Text="Chấm Công" FontSize="25" HorizontalAlignment="Right"/>
                                </Grid>
                            </Grid>
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                    <Setter Property="FontWeight" Value="Normal"></Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ChucNangNS}" Value="4">
                                            <Setter Property="FontWeight" Value="Bold"></Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding BtnChamCongCommand}">
                                    </i:InvokeCommandAction>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>
                    </StackPanel>
                    <!--Lương-->
                    <StackPanel Name="btnLuong" Orientation="Horizontal" Margin="0 0 0 5">
                        <Grid Width="7" Margin="0">
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Setter Property="Background" Value="{x:Null}"></Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ChucNangNS}" Value="5">
                                            <Setter Property="Background" Value="Cyan"></Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                        </Grid>
                        <Button 
                            Background="#FF616161"
                            Foreground="#DDFFFFFF"
                            ToolTip="Lương" HorizontalAlignment="Left"
                            Width="250" Height="40" Margin="5 5 5 5" >
                            <Grid HorizontalAlignment="Left" Width="200">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0"  HorizontalAlignment="Left" >
                                    <materialDesign:PackIcon 
                                    Kind="Cash" Width="50" Height="30" Margin="15,0,0,0" 
                                    />
                                </Grid>
                                <Grid Grid.Column="1">
                                    <TextBlock Text="Lương" FontSize="25"></TextBlock>
                                </Grid>
                            </Grid>
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                    <Setter Property="FontWeight" Value="Normal"></Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ChucNangNS}" Value="5">
                                            <Setter Property="FontWeight" Value="Bold"></Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding BtnLuongCommand}">
                                    </i:InvokeCommandAction>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>
                    </StackPanel>
                    <!--Tuyển Dụng-->
                    <StackPanel Name="btnTuyenDung" Orientation="Horizontal" Margin="0 0 0 5">
                        <Grid Width="7" Margin="0">
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Setter Property="Background" Value="{x:Null}"></Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ChucNangNS}" Value="6">
                                            <Setter Property="Background" Value="Cyan"></Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                        </Grid>
                        <Button 
                            Background="#FF616161"
                            Foreground="#DDFFFFFF"
                            ToolTip="Tuyển Dụng" HorizontalAlignment="Left"
                            Width="250" Height="40" Margin="5 5 5 5" >
                            <Grid Width="200">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <materialDesign:PackIcon 
                                    Kind="CameraAccount" Width="50" Height="30" Margin="15 0 0 0"
                                    />
                                </Grid>
                                <Grid Grid.Column="1">
                                    <TextBlock Text="Tuyển Dụng" FontSize="25"></TextBlock>
                                </Grid>
                            </Grid>
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                    <Setter Property="FontWeight" Value="Normal"></Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ChucNangNS}" Value="6">
                                            <Setter Property="FontWeight" Value="Bold"></Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding BtnTuyenDungCommand}">
                                    </i:InvokeCommandAction>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>
                    </StackPanel>
                    <!--Chi Phí-->
                    <StackPanel Name="btnChiPhi" Orientation="Horizontal" Margin="0 0 0 5">
                        <Grid Width="7" Margin="0">
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Setter Property="Background" Value="{x:Null}"></Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ChucNangNS}" Value="7">
                                            <Setter Property="Background" Value="Cyan"></Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                        </Grid>
                        <Button 
                            Background="#FF616161"
                            Foreground="#DDFFFFFF"
                            ToolTip="Chi Phí" HorizontalAlignment="Left"
                            Width="250" Height="40" Margin="5 5 5 5" >
                            <Grid Width="200">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <materialDesign:PackIcon  Kind="ChartHistogram" Width="50" Height="30" Margin="15 0 0 0" />
                                </Grid>
                                <Grid Grid.Column="1">
                                    <TextBlock Text="Chi Phí" FontSize="25"></TextBlock>
                                </Grid>
                            </Grid>
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                    <Setter Property="FontWeight" Value="Normal"></Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ChucNangNS}" Value="7">
                                            <Setter Property="FontWeight" Value="Bold"></Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding BtnChiPhiCommand}">
                                    </i:InvokeCommandAction>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>
                    </StackPanel>
                    <!--Báo Cáo-->
                    <StackPanel Name="btnBaoCao" Orientation="Horizontal" Margin="0 0 0 5">
                        <Grid Width="7" Margin="0">
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Setter Property="Background" Value="{x:Null}"></Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ChucNangNS}" Value="8">
                                            <Setter Property="Background" Value="Cyan"></Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                        </Grid>
                        <Button 
                            Background="#FF616161"
                            Foreground="#DDFFFFFF"
                            ToolTip="Báo Cáo" HorizontalAlignment="Left"
                            Width="250" Height="40" Margin="5 5 5 5" >
                            <Grid Width="200">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <materialDesign:PackIcon 
                                    Kind="FileDocumentBox" Width="50" Height="30" Margin="15 0 0 0" />
                                </Grid>
                                <Grid Grid.Column="1">
                                    <TextBlock Text="Báo Cáo" FontSize="25"></TextBlock>
                                </Grid>
                            </Grid>
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                    <Setter Property="FontWeight" Value="Normal"></Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ChucNangNS}" Value="8">
                                            <Setter Property="FontWeight" Value="Bold"></Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding BtnBaoCaoCommand}">
                                    </i:InvokeCommandAction>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>
                    </StackPanel>
                    <!--Cài Đặt-->
                    <StackPanel Name="btnCaiDat" Orientation="Horizontal" Margin="0 0 0 5">
                        <Grid Width="7" Margin="0">
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Setter Property="Background" Value="{x:Null}"></Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ChucNangNS}" Value="9">
                                            <Setter Property="Background" Value="Cyan"></Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                        </Grid>
                        <Button 
                            Background="#FF616161"
                            Foreground="#DDFFFFFF"
                            ToolTip="Cài Đặt" HorizontalAlignment="Left"
                            Width="250" Height="40" Margin="5 5 5 5" >
                            <Grid Width="200">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <materialDesign:PackIcon  Kind="SettingsOutline" Width="50" Height="30" Margin="15 0 0 0" />
                                </Grid>
                                <Grid Grid.Column="1">
                                    <TextBlock Text="Cài Đặt" FontSize="25"></TextBlock>
                                </Grid>
                            </Grid>
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                    <Setter Property="FontWeight" Value="Normal"></Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ChucNangNS}" Value="9">
                                            <Setter Property="FontWeight" Value="Bold"></Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding BtnCaiDatCommand}">
                                    </i:InvokeCommandAction>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <!--Phần hiện thị các Grid-->
            <Grid Grid.Column="1" Margin="20 0 20 10">
                <!--Nhân Viên-->
                <Grid Name="gridNhanVien">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Hidden"></Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ChucNangNS}" Value="1">
                                    <Setter Property="Visibility" Value="Visible"></Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="130"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>

                    <!--Tiêu đề trang-->
                    <Grid Grid.Row="0" Margin="0 0 -20 10">
                        <Grid.Background>
                            <ImageBrush ImageSource="/ResourceXAML/Icons/background.jpg" Stretch="Fill"/>
                        </Grid.Background>
                        <TextBlock Text="Nhân viên" FontSize="36" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold" />
                    </Grid>

