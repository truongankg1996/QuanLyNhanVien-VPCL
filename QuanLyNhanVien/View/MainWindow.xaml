                                    </Rectangle>
                                </StackPanel>

                                <!--Ngày nghỉ lễ-->
                                <StackPanel>
                                    <Button  Content="Ngày Nghỉ Lễ" Height="35" BorderBrush="{x:Null}" >
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                                <Setter Property="FontWeight" Value="Normal"></Setter>
                                                <Setter Property="Background" Value="Gray"></Setter>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ChucNangCD}" Value="1">
                                                        <Setter Property="FontWeight" Value="Bold"></Setter>
                                                        <Setter Property="Background" Value="Cyan"></Setter>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>

                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Click">
                                                <i:InvokeCommandAction Command="{Binding TabNgayNghiLeCommand}">
                                                </i:InvokeCommandAction>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </Button>
                                    <Rectangle Height="3" Margin="0">
                                        <Rectangle.Style>
                                            <Style TargetType="Rectangle">
                                                <Setter Property="Fill" Value="{x:Null}"></Setter>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ChucNangCD}" Value="1">
                                                        <Setter Property="Fill" Value="Cyan"></Setter>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Rectangle.Style>
                                    </Rectangle>
                                </StackPanel>

                                <!--Thông tin phần mềm-->
                                <StackPanel>
                                    <Button  Content="Thông Tin Phần Mềm" Height="35" BorderBrush="{x:Null}" >
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                                <Setter Property="FontWeight" Value="Normal"></Setter>
                                                <Setter Property="Background" Value="Gray"></Setter>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ChucNangCD}" Value="2">
                                                        <Setter Property="FontWeight" Value="Bold"></Setter>
                                                        <Setter Property="Background" Value="Cyan"></Setter>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>

                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Click">
                                                <i:InvokeCommandAction Command="{Binding TabThongTinPhanMemCommand}">
                                                </i:InvokeCommandAction>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </Button>
                                    <Rectangle Height="3" Margin="0">
                                        <Rectangle.Style>
                                            <Style TargetType="Rectangle">
                                                <Setter Property="Fill" Value="{x:Null}"></Setter>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ChucNangCD}" Value="2">
                                                        <Setter Property="Fill" Value="Cyan"></Setter>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Rectangle.Style>
                                    </Rectangle>
                                </StackPanel>
                            </StackPanel>
                            <GridSplitter VerticalAlignment="Bottom" HorizontalAlignment="Stretch" IsEnabled="False" Background="White"></GridSplitter>
                        </Grid>

                        <!--Nội Dung Tab-->
                        <Grid Grid.Row="1">
                            <!--Tab Tài Khoản-->
                            <Grid>
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Setter Property="Visibility" Value="Hidden"></Setter>
                                        <Style.Triggers>
                                            <DataTrigger  Binding="{Binding ChucNangCD}" Value="0">
                                                <Setter Property="Visibility" Value="Visible"></Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="70"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>

                                <!--Thanh Chức Năng-->
                                <Grid Grid.Row="0"   Margin="0 0 0 20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>

                                    <TextBox
                                        Grid.Column="0"
                                        Foreground="White"
                                        materialDesign:HintAssist.Hint="Tìm Kiếm"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                        Text="{Binding SearchTaiKhoan, UpdateSourceTrigger=PropertyChanged}">

                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="TextChanged">
                                                <i:InvokeCommandAction Command="{Binding SearchCommand}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </TextBox>

                                    <!--Button Tạo Mới-->
                                    <Button
                                        Command="{Binding TaoMoiComamand}"
                                        Grid.Column="1" Height="auto"  Width="150"
                                        HorizontalAlignment="Right"
                                        ToolTip="Tạo Mới"
                                        Style="{StaticResource MaterialDesignRaisedDarkButton}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition ></ColumnDefinition>
                                                <ColumnDefinition Width="auto"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <Grid Grid.Column="0">
                                                <materialDesign:PackIcon  HorizontalAlignment="Center"  
                                                    Height="25"  Width="25"    
                                                    Kind="Add"/>
                                            </Grid>
                                            <Grid Grid.Column="1">
                                                <TextBlock Text="Tạo Mới" HorizontalAlignment="Center" FontSize="20"></TextBlock>
                                            </Grid>
                                        </Grid>
                                    </Button>
                                </Grid>

                                <!--Danh sách-->
                                <ListView 
                                        x:Name="listTaiKhoan"
                                        Grid.Row="1"
                                        ItemsSource="{Binding ListTaiKhoan}" 
                                        SelectedItem="{Binding SelectedTaiKhoan, Mode=OneWayToSource}" >
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="SelectionChanged">
                                            <i:InvokeCommandAction Command="{Binding HienThiCommand}">
                                            </i:InvokeCommandAction>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>

                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn DisplayMemberBinding="{Binding TenDangNhap_TK}" >
                                                <GridViewColumnHeader Tag="TenDangNhap_TK" 
                                                              Command="{Binding SortCommand}" 
                                                              CommandParameter="{Binding RelativeSource={RelativeSource Self}}" 
                                                              VerticalAlignment="Center" Content="Tên Đăng Nhập" Width="200">
                                                </GridViewColumnHeader>
                                            </GridViewColumn>
                                            <GridViewColumn DisplayMemberBinding="{Binding Quyen_TK}">
                                                <GridViewColumnHeader Tag="Quyen_TK" 
                                                              Command="{Binding SortCommand}" 
                                                              CommandParameter="{Binding RelativeSource={RelativeSource Self}}" 
                                                              VerticalAlignment="Center" Content="Quyền Tài Khoản" Width="300">
                                                </GridViewColumnHeader>
                                            </GridViewColumn>
                                            <GridViewColumn DisplayMemberBinding="{Binding NhanVien.HoTen_NV}">
                                                <GridViewColumnHeader Tag="HoTen_NV" 
                                                              Command="{Binding SortCommand}" 
                                                              CommandParameter="{Binding RelativeSource={RelativeSource Self}}" 
                                                              VerticalAlignment="Center" Content="Tên Nhân Viên" Width="300">
                                                </GridViewColumnHeader>
                                            </GridViewColumn>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </Grid>

                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
